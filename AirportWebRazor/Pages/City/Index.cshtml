@page
@model AirportWebRazor.Pages.City.IndexModel
@{
}

<div class="row">
    <div class="col-4"><h4 class="text text-info text-right">لیست شهر ها</h4></div>
    <div class="col-4"></div>
    <div class="col-4">
        <a asp-page="Create" class="btn btn-info form-control text-white">ثبت شهر </a>
    </div>

</div>
<form method="post" id="grid-option">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title-wrap bar-success">
                        <h4 class="card-title">لیست موارد ثبت شده</h4>
                    </div>
                </div>
                <div class="card-body">
                    <div class="card-block">
                        <div class="table-responsive">
                            <table class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th> نام شهر </th>
                                        <th>استان </th>
                                        <th> تاریخ ثبت</th>
                                        <th> تاریخ آخرین بروز رسانی</th>
                                        <th>عملیات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        var state = ViewData["State"] as List<AirPortModel.Models.State>;

                                        foreach (var item in Model.cities)
                                        {
                                            <tr>
                                                <td>@item.Name</td>
                                                <td>@state.FirstOrDefault(x=>x.Id.Equals(item.CityStateId)).Name</td>
                                                <td>@item.DateCreate</td>
                                                <td>@item.LastUpdate</td>
                                                <td>
                                                    <button type="submit" onclick="return confirm('ایا اطمینان دارید')" class="btn btn-danger btn-sm" value="@item.Id" name="id">حذف</button>
                                                    <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm text-white">به روز رسانی</a>
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</form>