@page
@model AirportWebRazor.Pages.City.CreateModel
@{
}


<h4 class="text text-right text-info"> ثبت شهر</h4>

<div class="row match-height">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="card-title-wrap bar-info">
                    <h4 class="card-title" id="basic-layout-round-controls">فرم ثبت شهر </h4>
                </div>
            </div>
            <div class="card-body">
                <div class="px-3">

                    <form class="form" enctype="multipart/form-data"  method="post">
                        <div class="form-body col-6">
                            <div class="row">
                                <div class="form-group col-md-6">
                                    <label for="complaintinput1">نام شهر </label>
                                    <input type="text" id="complaintinput1" class="form-control round" name="Name">
                                </div>

                                <div class="form-group col-md-6">
                                    <label for="issueinput6">نام استان</label>
                                    <select id="issueinput6" name="CityStateId" class="form-control" data-toggle="tooltip" data-trigger="hover" data-placement="top"
                                            data-title="Status">
                                        @foreach (var item in ViewData["states"] as IList<AirPortModel.Models.State>)
                                        {

                                            <option value="@item.Id">@item.Name</option>
                                        }

                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="form-actions">
                            <a asp-page="index" type="button" class="btn btn-danger mr-1">
                                <i class="icon-trash"></i> لغو
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="icon-note"></i> ذخیره
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>