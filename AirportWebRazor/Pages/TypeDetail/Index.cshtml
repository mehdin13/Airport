@page
@model AirportWebRazor.Pages.TypeDetal.IndexModel
@{
}
<br />



<div class="row">
    <div class="col-4"><h4 class="text-right text-info">  انواع جزیات</h4></div>
    <div class="col-4"></div>
    <div class="col-4">
        <a asp-page="Create" class="btn btn-info form-control text-white">افزودن ویژگی</a>
    </div>

</div>
<form method="post" id="grid-option">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title-wrap bar-success">
                        <h4 class="card-title">لیست موارد ثبت شده</h4>
                    </div>
                </div>
                <div class="card-body">
                    <div class="card-block">
                        <div class="table-responsive">
                            <table class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>نام</th>
                                        <th> تاریخ ثبت</th>
                                        <th> تاریخ آخرین بروز رسانی</th>
                                        <th>عملیات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.typeDetails)
                                    {
                                    <tr>
                                        <td>@item.Name</td>
                                        <td>@item.DateCreate</td>
                                        <td>@item.LastUpdate</td>
                                        <td>
                                            <a class="btn btn-success btn-sm text-white">به روز رسانی</a>
                                        </td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</form>