@page
@model AirportWebRazor.Pages.Terminal.CreateModel
@{
}
<style>

    .align-self-center {
        -webkit-align-self: center !important;
        -ms-flex-item-align: center !important;
        -ms-grid-row-align: center !important;
        align-self: center !important;
    }

    .image-uploader {
        min-height: 10rem;
        border: 2px dashed #d9d9d9;
        position: relative;
        border-radius: 20px;
    }

        .image-uploader input[type=file] {
            width: 100%;
            height: 100%;
            position: absolute;
            opacity: 0;
            right: 0 !important;
        }

    form .form-control {
        border: 1px solid #A6A9AE;
        color: #75787D;
    }

    .image-uploader .uploaded {
        padding: .5rem;
        line-height: 0;
    }

    .radius12 {
        border-radius: 20px !important;
    }
</style>

<h4 class="text text-right text-info"> ثبت ایرلاین</h4>

@*@{var dateairline = ViewData["dataairline"] as IList<AirPortModel.Models.Airline> }*@
<div class="row match-height">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="card-title-wrap bar-info">
                    <h4 class="card-title" id="basic-layout-round-controls"> ثبت ترمینال </h4>
                </div>
            </div>
            <div class="card-body">
                <div class="px-3">
                    @if (@ViewData["err"] != null)
                    {
                        <p>@ViewData["err"]</p>
                    }
                <form class="form" enctype="multipart/form-data" method="post">
                    <div class="form-body">

                        <div class="form-group">
                            <label for="complaintinput1">نام</label>
                            <input type="text" id="complaintinput1" class="form-control round" name="Name" />
                        </div>



                        <div class="form-group col-4">
                            <label for="issueinput6">نام فرودگاه</label>
                            <select id="issueinput6" name="AirPortId" class="form-control" data-toggle="tooltip" data-trigger="hover" data-placement="top"
                                    data-title="Status">
                                @foreach (var item in ViewData["airportes"] as IList<AirPortModel.Models.AirPort>)
                                {
                                    <option value="@item.Id">@item.Name</option>
                                }

                            </select>
                        </div>


                        <!--Start Gallery-->
                        <div class="col-md-6 m-auto">
                            <div class="align-self-center halfway-fab text-center">
                                <h6>آپلود لوگو ایرلاین</h6>
                                <div class="image-uploader">
                                    <input type="file"
                                           accept="image/*"
                                           id="file-input"
                                           name="images"
                                           class="form-control"
                                           value="Select"
                                           placeholder="Select">
                                    <div class="uploaded">
                                        <img src=""
                                             alt=""
                                             id="image-previewer"
                                             class="img-fluid radius12">
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-12 m-auto">
                            <div class="text-center mt-2">
                                <h6 class="font1">
                                    برای تغییر تصویر خود ،
                                    تصویر جدید رو داخل کادر
                                    بیاندازید یا بر روی عکس کلیک
                                    کنید
                                </h6>
                            </div>
                        </div>
                    </div>
<!--End Gallery -->

                    <div class="form-actions">
                        <a asp-page="index" type="button" class="btn btn-danger mr-1">
                            <i class="icon-trash"></i> لغو
                        </a>
                        <button type="submit" class="btn btn-success">
                            <i class="icon-note"></i> ذخیره
                        </button>
                    </div>
                </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $(function () {
            $('#file-input').imoViewer({
                'preview': '#image-previewer',
            })
        });
    });
</script>