@page
@model AirportWebRazor.Pages.Terminal.IndexModel
@{
}
<br />
<br />
<h1 class="text text-info text-center">لیست ترمینال ها</h1>

<div class="row">
    <div class="col-2"></div>
    <div class="col-2"></div>
    <div class="col-2"></div>
    <div class="col-2"></div>
    <div class="col-2"></div>
    <div class="col-2">
        <a asp-page="Create" class="btn btn-info form-control text-white">ثبت ترمینال جدید</a>
    </div>

</div>
<form method="post" id="grid-option">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title-wrap bar-success">
                        <h4 class="card-title">لیست ترمینال ها</h4>
                    </div>
                </div>
                <div class="card-body">
                    <div class="card-block">
                        <div class="table-responsive">
                            <table class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th> نام ترمینال </th>
                                        <th>عکس ترمینال </th>
                                        <th>فرودگاه</th>
                                        <th> تاریخ ثبت</th>
                                        <th> تاریخ آخرین بروز رسانی</th>
                                        <th>عملیات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        var Airportes = ViewData["Airport"] as List<AirPortModel.Models.AirPort>;

                                        foreach (var item in Model.TerminalsObj)
                                        {
                                            <tr>
                                                <td>@item.Name</td>
                                                <td><img src="@Url.Content(item.Image)" width="100" height="100" alt="نمایش تصویر" /></td>
                                                <td>@Airportes.FirstOrDefault(x=>x.Id.Equals(item.AirPortId)).Name</td>
                                                <td>@item.DateCreate</td>
                                                <td>@item.LastUpdate</td>
                                                <td>
                                                    <button type="submit" onclick="return confirm('ایا اطمینان دارید')" class="btn btn-danger btn-sm" value="@item.Id" name="id">حذف</button>
                                                    <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm text-white">به روز رسانی</a>
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</form>