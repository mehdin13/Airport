@page
@model AirportWebRazor.Pages.Entertainment.Video.EditModel
@{
}
<div class="row match-height">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="card-title-wrap bar-info">
                    <h4 class="card-title" id="basic-layout-round-controls"> ثبت خط هوایی </h4>
                </div>
            </div>
            <div class="card-body">
                <div class="px-3">

                    <form class="form" method="post">
                        <input type="hidden" name="Type" value="@Model.entertainment.Type" />
                        <input type="hidden" name="Id" value="@Model.entertainment.Id" />
                        <input type="hidden" name="Id" value="@Model.entertainment.LinkIds" />
                        <input type="hidden" name="IsDelete" value="@Model.entertainment.IsDelete" />
                        <input type="hidden" name="DateCreate" value="@Model.entertainment.DateCreate" />
                        <input type="hidden" name="LastUpdate" value="@Model.entertainment.LastUpdate" />
                        <input type="hidden" name="Galleryid" value="@Model.entertainment.Galleryid" />
                        <div class="form-body">
                            <!--link-->
                            <div class="row">
                                <div class="form-group col-3">
                                    <label for="complaintinput1">عنوان لینک</label>
                                    <input type="text" id="complaintinput1" class="form-control round" name="Title">
                                </div>
                                <div class="form-group col-3">
                                    <label for="complaintinput1">پیوند</label>
                                    <input type="text" id="complaintinput1" class="form-control round" name="Url">
                                </div>
                                <div class="form-group col-3">
                                    <label for="complaintinput1">ایکن</label>
                                    <input type="text" id="complaintinput1" class="form-control round" name="Icon">
                                </div>
                                <div class="form-group col-3">
                                    <label for="complaintinput1">توضیحات</label>
                                    <input type="text" id="complaintinput1" class="form-control round" name="Description">
                                </div>

                            </div>
                            <!--link-->

                            <div class="row">

                                <div class="form-group col-4">
                                    <label for="complaintinput1">  نام ویدیو</label>
                                    <input type="text" id="complaintinput1" class="form-control round" name="Name" value="@Model.entertainment.Name" />
                                </div>
                                <div class="form-group col-4">
                                    <label for="complaintinput1">  عنوان ویدیو</label>
                                    <input type="text" id="complaintinput1" class="form-control round" name="Name" value="@Model.entertainment.Title" />
                                </div>
                                <div class="form-group col-4">
                                    <label for="complaintinput1">  توضیحات ویدیو</label>
                                    <input type="text" id="complaintinput1" class="form-control round" name="Name" value="@Model.entertainment.Description" />
                                </div>
                            </div>
                        </div>

                        <div class="form-actions">
                            <a asp-page="index" type="button" class="btn btn-danger mr-1">
                                <i class="icon-trash"></i> لغو
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="icon-note"></i> ذخیره
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>