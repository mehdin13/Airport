@page
@model AirportWebRazor.Pages.AirPlane.CreateModel
@{
}
<br />
<br />
<h1 class="text text-center text-info"> ثبت هواپیما جدید</h1>


<div class="row match-height">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="card-title-wrap bar-info">
                    <h4 class="card-title" id="basic-layout-round-controls">فرم ثبت هواپیما</h4>
                </div>
            </div>
            <div class="card-body">
                <div class="px-3">

                    <form class="form" enctype="multipart/form-data" method="post">
                        <div class="form-body">

                            <div class="form-group">
                                <label for="complaintinput1">نام</label>
                                <input type="text" id="complaintinput1" class="form-control round" name="Name">
                            </div>
                            <div class="form-group">
                                <label for="complaintinput1">مدل</label>
                                <input type="text" id="complaintinput1" class="form-control round" name="Model">
                            </div>
                            <div class="form-group">
                                <label for="complaintinput1">کد</label>
                                <input type="text" id="complaintinput1" class="form-control round" name="AirPlaneCode">
                            </div>

                            <div class="form-group">
                                <label for="issueinput6">برند هواپیما</label>
                                <select id="issueinput6" name="BrandId" class="form-control" data-toggle="tooltip" data-trigger="hover" data-placement="top"
                                        data-title="Status">
                                    @foreach (var item in ViewData["Brandes"] as IList<AirPortModel.Models.Brand>)
                                    {

                                        <option value="@item.Id">@item.BrandName</option>
                                    }

                                </select>
                            </div>

                            <div class="form-group">
                                <label>فایل را انتخاب کنید</label>
                                <input type="file" name="images" class="form-control-file" id="projectinput7">
                            </div>

                            @*<div class="form-group">
                                <label for="complaintinput1">جزیات</label>
                                <input type="text" id="complaintinput1" class="form-control round" name="DetailId">
                            </div>*@

                            <div class="form-group">
                                <label for="issueinput7">خطوط هوایی</label>
                                <select id="issueinput7" name="AirlineId" class="form-control" data-toggle="tooltip" data-trigger="hover" data-placement="top"
                                        data-title="Status">
                                    @foreach (var item in ViewData["AirLine"] as IList<AirPortModel.Models.Airline>)
                                    {

                                        <option value="@item.Id">@item.Name</option>
                                    }

                                </select>
                            </div>

                            @{int count = 0;
                                foreach (var item in ViewData["featruelist"] as IList<AirPortModel.Models.Featrue>)
                                {
                                    <div class="form-group">
                                        <label for="complaintinput1">@item.Name</label>
                                        <input type="hidden" name="id" value="@item.Id" />
                                        <input type="text" id="complaintinput1" class="form-control round" name="value" />
                                    </div>
                                    count++;
                                }
                            }

                        </div>
                        <div class="form-actions">
                            <a asp-page="index" type="button" class="btn btn-danger mr-1">
                                <i class="icon-trash"></i> لغو
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="icon-note"></i> ذخیره
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>