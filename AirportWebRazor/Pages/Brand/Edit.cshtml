@page
@model AirportWebRazor.Pages.Brand.EditModel
@{
}
<h1 class="text text-info text-center">به روزرسانی برند</h1>

<div class="row match-height">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="card-title-wrap bar-info">
                    <h4 class="card-title" id="basic-layout-round-controls"> ثبت برند جدید </h4>
                </div>
            </div>
            <div class="card-body">
                <div class="px-3">

                    <form class="form" enctype="multipart/form-data" method="post">
                        <input type="hidden" name="Id" value="@Model.brandObj.Id" />
                        <input type="hidden" name="BrandIcon" value="@Model.brandObj.BrandIcon" />
                        <input type="hidden" name="IsDelete" value="@Model.brandObj.IsDelete" />
                        <input type="hidden" name="DateCreate" value="@Model.brandObj.DateCreate" />
                        <div class="form-body">

                            <div class="row">
                                <div class="form-group col-6">
                                    <label for="complaintinput1">نام برند</label>
                                    <input type="text" id="complaintinput1" class="form-control round" name="BrandName" value="@Model.brandObj.BrandName" />
                                </div>

                                <div class="form-group col-6">
                                    <label>فایل را انتخاب کنید</label>
                                    <input type="file" name="images" class="form-control-file" id="projectinput7">
                                </div>
                            </div>
                            <div class="form-actions">
                                <a asp-page="index" type="button" class="btn btn-danger mr-1">
                                    <i class="icon-trash"></i> لغو
                                </a>

                                <button type="submit" class="btn btn-success">
                                    <i class="icon-note"></i> ذخیره
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>