@page
@model AirportWebRazor.Pages.Article.EditModel
@{
}

<h1 class="text text-center text-info"> بروزرسانی مقالات</h1>

<div class="row match-height">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="card-title-wrap bar-info">
                    <h4 class="card-title" id="basic-layout-round-controls"> به روزرسانی</h4>
                </div>
            </div>
            <div class="card-body">
                <div class="px-3">

                    <form class="form" method="post">
                        
                        <input type="hidden" name="Id" value="@Model.articleObj.Id" />
                        <input type="hidden" name="IsDelete" value="@Model.articleObj.IsDelete" />
                        <input type="hidden" name="DateCreate" value="@Model.articleObj.DateCreate" />
                        <input type="hidden" name="LastUpdate" value="@Model.articleObj.LastUpdate" />
                        <input type="hidden" name="GalleryId" value="@Model.articleObj.GalleryId" />
                        <div class="form-body">
                            <div class="row">
                                <div class="form-group col-4">
                                    <label for="complaintinput1">  عنوان مقاله </label>
                                    <input type="text" id="complaintinput1" class="form-control round" name="Title" value="@Model.articleObj.Title" />
                                </div>
                                <div class="form-group col-4">
                                    <label for="complaintinput1">توضیحات مقاله</label>
                                    <input type="text" id="complaintinput1" class="form-control round" name="Description" value="@Model.articleObj.Description" />
                                </div>
                                <div class="form-group col-4">
                                    <label>فایل عکس را انتخاب کنید</label>
                                    <input type="file" class="form-control-file" name="images" id="projectinput7">
                                </div>
                            </div>
                        </div>
                        <div class="form-actions">
                            <a asp-page="index" type="button" class="btn btn-danger mr-1">
                                <i class="icon-trash"></i> لغو
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="icon-note"></i> ذخیره
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>