<form method="post" id="grid-option">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title-wrap bar-success">
                        <h4 class="card-title">لیست جزیات</h4>
                    </div>
                </div>
                <div class="card-body">
                    <div class="card-block">
                        <div class="table-responsive">
                            <table class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>نام و نام خانوادگی کامل</th>
                                        <th>شماره تلفن</th>
                                        <th>توضیحات</th>
                                        <th> تاریخ ثبت</th>
                                        <th> تاریخ آخرین بروز رسانی</th>
                                        <th>عملیات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.advertizments)
                                    {
                                        <tr>
                                            <td>@item.FullName</td>
                                            <td>@item.Phone</td>
                                            <td>@item.Description</td>
                                            <td>@item.DateCreate</td>
                                            <td>@item.LastUpdate</td>
                                            <td>
                                                <button type="submit" onclick="return confirm('آیا اطمینان دارید')" class="btn btn-danger btn-sm" value="@item.Id" name="id">حذف</button>
                                                <a class="btn btn-success btn-sm text-white">به روز رسانی</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</form>


