@page
@model AirportWebRazor.Pages.state.EditModel
@{
}
<h4 class="text-info text-right">به روزرسانی</h4>

<div class="row match-height">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="card-title-wrap bar-info">
                    <h4 class="card-title" id="basic-layout-round-controls"> به روز رسانی استان </h4>
                </div>
            </div>
            <div class="card-body">
                <div class="px-3">

                    <form class="form" method="post">
                        <input type="hidden" name="Id" value="@Model.StateObj.Id" />
                        <input type="hidden" name="IsDelete" value="@Model.StateObj.IsDelete" />
                        <input type="hidden" name="DateCreate" value="@Model.StateObj.DateCreate" />
                        <div class="form-body">

                            <div class="form-group">
                                <label for="complaintinput1">نام استان</label>
                                <input type="text" id="complaintinput1" class="form-control round" name="Name" value="@Model.StateObj.Name" />
                            </div>

                            <div class="form-actions">
                                <a asp-page="index" type="button" class="btn btn-danger mr-1">
                                    <i class="icon-trash"></i> لغو
                                </a>
                                <button type="submit" class="btn btn-success">
                                    <i class="icon-note"></i> ذخیره
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>