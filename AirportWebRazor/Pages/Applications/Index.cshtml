@page
@model AirportWebRazor.Pages.Applications.IndexModel
@{
}


<div class="row">
    <div class="col-4"><h4 class="text text-right text-info"> لیست انرم افزار های ما</h4></div>
    <div class="col-4"></div>
    <div class="col-4">
        <a asp-page="Create" class="btn btn-info form-control text-white">ثبت نرم افزار </a>
    </div>

</div>
<form method="post" id="grid-option">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title-wrap bar-success">
                        <h4 class="card-title">لیست نرم موارد ثبت شده</h4>
                    </div>
                </div>
                <div class="card-body">
                    <div class="card-block">
                        <div class="table-responsive">
                            <table class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th> عنوان  </th>
                                        <th> آدرس  </th>
                                        <th> آیکن  </th>
                                        <th> توضیحات  </th>
                                        <th> تاریخ ثبت</th>
                                        <th> تاریخ آخرین بروز رسانی</th>
                                        <th>عملیات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.linksOBJ.Where(x=>x.CategoryId.Equals(14)))
                                    {
                                    <tr>
                                        <td>@item.Title</td>
                                        <td>@item.Url</td>
                                        <td><img src="@Url.Content(item.Icon)" width="100" height="100" alt="نمایش ایکن" /></td>
                                        <td>@item.Description</td>
                                        <td>@item.DateCreate</td>
                                        <td>@item.LastUpdate</td>
                                        <td>
                                            <button type="submit" onclick="return confirm('آیا اطمینان دارید')" class="btn btn-danger btn-sm" value="@item.Id" name="id">حذف</button>
                                            <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm text-white">به روز رسانی</a>
                                        </td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</form>