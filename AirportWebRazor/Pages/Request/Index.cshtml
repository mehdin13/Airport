@page
@model AirportWebRazor.Pages.Request.IndexModel
@{
}
<br />

<h1 class="text-center text-info"> لیست درخواست ها</h1>

<form method="post" id="grid-option">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title-wrap bar-success">
                        <h4 class="card-title">لیست درخواست ها</h4>
                    </div>
                </div>
                <div class="card-body">
                    <div class="card-block">
                        <div class="table-responsive">
                            <table class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th> نام درخواست </th>
                                        <th> تاریخ ثبت</th>
                                        <th> تاریخ آخرین بروز رسانی</th>
                                        <th>عملیات</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @{
                                        var requests = ViewData["requesttype"] as List<AirPortModel.Models.RequestType>;
                                        var customers = ViewData["Customer"] as List<AirPortModel.Models.Customer>;

                                        foreach (var item in Model.requests)
                                        {
                                            <tr>
                                                <td>@requests.FirstOrDefault(x => x.Id.Equals(item.TypeId)).Name</td>
                                                <td>@item.Title</td>
                                                <td>@item.Description</td>
                                                <td>@customers.FirstOrDefault(x => x.Id.Equals(item.CustomerId)).Name</td>
                                                <td>@item.DateCreate</td>
                                                <td>@item.LastUpdate</td>
                                                <td>
                                                    <button type="submit" onclick="return confirm('آیا اطمینان دارید')" class="btn btn-danger btn-sm" value="@item.Id" name="id">حذف</button>
                                                    <a class="btn btn-success btn-sm text-white">به روز رسانی</a>
                                                </td>
                                            </tr>
                                        }

                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</form>